package Main

import ClosureTimers
import MapState
import GlobalMapController

init
	new GlobalMapController()

	doAfter(1) ->
		let multi = CreateMultiboard()
		multi
			..setRowCount(1)
			..setColumnCount(1)
			..setTitle("Difficulity")
			..setItemsValue("0")
			..display(true)

		doPeriodically(30) cb ->
			multi.setTitle("Difficulity: " + mapState.getIncreasedLevel().toString(2) + "%")