package Main

import Players
import CreepsOnMap
import IncomeBuildings
import ClosureTimers
import MapState

init
	initPlayers()
	new CreepsOnMap()
	new IncomeBuildings()

	doAfter(1) ->
		let multi = CreateMultiboard()
		multi
			..setRowCount(1)
			..setColumnCount(1)
			..setTitle("Difficulity")
			..setItemsValue("0")
			..display(true)

		doPeriodically(30) cb ->
			multi.setTitle("Difficulity: " + mapState.getIncreasedLevel().toString(2) + "%")